<Window x:Class="HockeyAppDemoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HockeyApp Demo" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button Content="Throw exception" Margin="5"
                    HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Click="ExceptionButton_Click" Height="20" />
            <Button Content="Throw aggregate exception"  Margin="5"
                    HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Click="AggregateExceptionButton_Click" Height="20" />
            <Button Content="Throw background exception"  Margin="5"
                    HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Click="BackgroundExceptionButton_Click" Height="20" />
            <Button Content="Check for update"  Margin="5"
                    HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Click="UpdateCheckButton_Click" Height="20" />
        </StackPanel>
    </Grid>
</Window>
